<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/activity_ad_control"/>

    <RadioGroup
        android:id="@+id/template_choice"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_temp_1st"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/ngad_sdk_demo_template_1"
            android:textColor="@android:color/black"/>

        <RadioButton
            android:id="@+id/rb_temp_2nd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/ngad_sdk_demo_template_2"
            android:textColor="@android:color/black"/>
    </RadioGroup>
</RelativeLayout>