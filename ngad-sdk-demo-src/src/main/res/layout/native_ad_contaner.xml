<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_ad_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/iv_app_icon"
        android:layout_toRightOf="@+id/iv_app_icon"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="标题" />

    <TextView
        android:id="@+id/tv_app_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_app_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_app_icon"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="app文字描述" />

    <TextView
        android:id="@+id/tv_app_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_app_desc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_app_icon"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="5星" />

    <TextView
        android:id="@+id/btn_app_click"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_app_icon"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        tools:text="点击下载"/>

    <ImageView
        android:id="@+id/iv_app_img"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_below="@id/btn_app_click" />
    
    <ImageView
        android:id="@+id/iv_ad_logo"
        android:layout_alignRight="@+id/iv_app_img"
        android:layout_alignBottom="@+id/iv_app_img"
        android:layout_width="53dp"
        android:layout_height="18dp" />
</RelativeLayout>