<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <Button
        android:id="@+id/banner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ngad_sdk_demo_banner_ad"/>

    <Button
        android:id="@+id/insert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ngad_sdk_demo_interstitial_ad"/>

    <Button
        android:id="@+id/video"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ngad_sdk_demo_video_ad"/>

    <Button
        android:id="@+id/welcome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ngad_sdk_demo_splash_ad"/>

    <Button
        android:id="@+id/template"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ngad_sdk_demo_template_ad"/>

    <Button
        android:id="@+id/nativeAd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ngad_sdk_demo_native_ad"/>
</LinearLayout>